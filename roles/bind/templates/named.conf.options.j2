options {
    directory "/var/cache/bind";

    recursion yes;
    allow-query {
        {% for network in allowed_networks %}
        {{ network }};
        {% endfor %}
    };

    forwarders {
        {% for forwarder in dns_forwarders %}
        {{ forwarder }};
        {% endfor %}
    };

    dnssec-validation auto;

    auth-nxdomain no;    # conform to RFC1035
    listen-on-v6 { any; };
};

statistics-channels {
    inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};

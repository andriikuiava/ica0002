zone "{{ startup_name }}" {
{% if inventory_hostname in groups ['dns_primary'] %}
    type master;
    allow-update { key nsupdate.key; };
    allow-transfer { 127.0.0.1; key transfer.key;};
{% else %}
    type slave;
    masters { {{ hostvars[groups['dns_primary'][0]]['ansible_default_ipv4']['address'] }}; };
{% endif %}
    file "db.{{ startup_name }}";
};

server {
	listen 80 default_server;
	server_name _;

	location /prometheus {
        proxy_pass http://localhost:9090;
    }

    location /grafana {
        proxy_set_header Host $http_host;
        proxy_pass http://localhost:3000;
    }

    location /nginx_status {
        stub_status;
        allow 127.0.0.1;
        deny all;
    }
}
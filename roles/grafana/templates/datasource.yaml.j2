apiVersion: 1
datasources:
  - name: Prometheus
    type: prometheus
    url: http://{{ hostvars['andriikuiava-2']['ansible_default_ipv4']['address'] }}:9090/prometheus
    access: proxy
    isDefault: true

  - name: AgamaDB
    type: influxdb
    url: http://{{ hostvars['andriikuiava-2']['ansible_default_ipv4']['address'] }}:8086
    access: proxy
    database: example
#    user: <influxdb_user>
#    password: <influxdb_password>

  - name: InfluxDB:Telegraf
    type: influxdb
    access: proxy
    url: http://{{ hostvars['andriikuiava-2']['ansible_default_ipv4']['address'] }}:8086
    jsonData:
      dbName: syslog